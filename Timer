function countDown(num) {
  let timer = setInterval(function () {
    num--;
    if (num <= 0) {
      // stop the timer
      clearInterval(timer);
      console.log("DONE!");
    } else {
      console.log(num);
    }
  }, 1000);
}

countDown(4);

function randomGame() {
  let i = 0;
  // The setInterval() method continues calling the function
  // until clearInterval() is called
  let timer = setInterval(function () {
    let random = Math.random();
    i++;
    if (random > 0.75) {
      // stop the timer
      clearInterval(timer);
      console.log("The number of tries: ", i);
    }
  }, 1000);
}

randomGame();
